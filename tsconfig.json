{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": [
    "./src/**/*",
    "./stories/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
